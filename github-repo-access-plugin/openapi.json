{
  "openapi": "3.0.0",
  "info": {
    "title": "GitHub Repository Access Plugin",
    "description": "Provides access to GitHub repository contents including file structure and file content reading.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://github-repo-access:8000",
      "description": "Docker container URL"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local development URL"
    }
  ],
  "paths": {
    "/api/repos/{owner}/{repo}/structure": {
      "get": {
        "operationId": "getRepoStructure",
        "summary": "Get repository file and folder structure",
        "description": "Returns the hierarchical structure of files and directories in a GitHub repository.",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "GitHub repository owner (username or organization)"
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "GitHub repository name"
          },
          {
            "name": "path",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": ""
            },
            "description": "Path within repository (defaults to root)"
          },
          {
            "name": "branch",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": ""
            },
            "description": "Branch name (defaults to default branch)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RepositoryStructure"
                }
              }
            }
          },
          "404": {
            "description": "Repository not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/repos/{owner}/{repo}/files/{file_path}": {
      "get": {
        "operationId": "readFile",
        "summary": "Read a file from a GitHub repository",
        "description": "Returns the content of a specific file in the repository.",
        "parameters": [
          {
            "name": "owner",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "GitHub repository owner"
          },
          {
            "name": "repo",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "GitHub repository name"
          },
          {
            "name": "file_path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Full path to the file"
          },
          {
            "name": "branch",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": ""
            },
            "description": "Branch name (defaults to default branch)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FileContent"
                }
              }
            }
          },
          "404": {
            "description": "File not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RepositoryStructure": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "file",
                    "dir"
                  ]
                },
                "size": {
                  "type": "integer",
                  "nullable": true
                }
              }
            }
          }
        }
      },
      "FileContent": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "size": {
            "type": "integer"
          },
          "encoding": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "GitHubToken": {
        "type": "http",
        "scheme": "bearer",
        "description": "GitHub Personal Access Token"
      }
    }
  },
  "security": [
    {
      "GitHubToken": []
    }
  ]
}
